<section class="form add-student-section container-fluid">
  <a href="/teacher/options" class="btn btn-outline-dark">Go Back</a>
  <div class="container add-student">
    <h4 class="text-center"><u>Add Student Results</u></h4>
    <form method="post">
      <div class="row">
        <div class="col-lg-6">

          <div class="mb-3">
            <label class="form-label">Roll No. : </label>
            <input class="form-control" type="text" maxlength="8" name="roll" id="roll">
            <!-- error -->
            <div class="text-danger" style="display: none;">Student roll number is required.</div>
            <div class="text-danger" style="display: none;">Only numeric values are acceptable.</div>
            <div class="text-danger" style="display: none;">Roll number must be 8 digits long.</div>
          </div>

          <div class="mb-3">
            <label class="form-label">Name : </label>
            <input class="form-control" type="text" name="name" id="name">
            <!-- error -->
            <div class="text-danger" style="display: none;">Student full name is required.</div>
            <div class="text-danger" style="display: none;">Invalid name format. E.g., Yanga Ntuli</div>
          </div>

          <div class="mb-3">
            <label class="form-label">Date of Birth : </label>
            <input class="form-control" type="date" name="dob" id="dob">
            <!-- error -->
            <div class="text-danger" style="display: none;">Student date of birth is required.</div>
          </div>

          <div class="mb-3">
            <label class="form-label">Score : </label>
            <input class="form-control" type="text" maxlength="3" name="score" id="score">
            <!-- error -->
            <div class="text-danger" style="display: none;">Student results are mandatory.</div>
            <div class="text-danger" style="display: none;">Only numeric values are acceptable.</div>
            <div class="text-danger" style="display: none;">Student score cannot exceed 100%</div>
          </div>

          <div class="text-center mb-3">
            <span class="px-3">
              <button type="submit" class="btn btn-success w-25" onclick="blur()">Add</button>
            </span>
            <span class="px-3">
              <button type="button" class="btn btn-danger" onclick="blur()">Reset</button>
            </span>
            <span class="px-3">
              <a href="/teacher/list-results" class="btn btn-primary w-25">View All</a>
            </span>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>